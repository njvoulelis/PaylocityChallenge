@model EmployeeDependentViewModel

<h1>Add a Dependent to @Model.ViewEmployee.FirstName</h1>

<form asp-action="AddDependentPost">
    <div class="form-group">
        <label asp-for="ViewDependent.FirstName">First Name: </label>
        <input asp-for="ViewDependent.FirstName">
    </div>
    <div class="form-group">
        <label asp-for="ViewDependent.LastName">Last Name: </label>
        <input asp-for="ViewDependent.LastName">
    </div>
    <input type="submit">
</form>

